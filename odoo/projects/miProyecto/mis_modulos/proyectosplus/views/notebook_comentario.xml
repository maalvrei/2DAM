<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- Definición de la vista de creación de Proyecto -->
        <record id="view_comentario_form" model="ir.ui.view">
            <field name="name">proyectosplus.comentario.form</field>
            <field name="model">proyectosplus.comentario</field>
            <field name="arch" type="xml">
                <form string="Crear comentario">
                    <sheet>
                        <notebook>
                            <page string="Datos del comentario">
                                <group>
                                    <field name="name"/>
                                    <field name="author_id"/>
                                    <field name="comment" widget="html"/>
                                    <field name="timestap"/>
                                    <field name="task_id" widget="many2one"></field>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</odoo>
